generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Author {
  id    Int    @id @default(autoincrement())
  name  String
  email String
  books Book[]
}

model Book {
  id          Int        @id @default(autoincrement())
  title       String
  description String?
  content     String?
  price       Int
  status      BookStatus
  authorId    Int        @map("author_id")
  author      Author     @relation(fields: [authorId], references: [id])
  imageUrl    String?    @map("image_url")

  @@index([authorId]) // Planet ScaleでPrismaを使う場合は、インデックスを明示的に定義する必要がある
}

enum BookStatus {
  published @map("PUBLISHED")
  draft     @map("DRAFT")
}
